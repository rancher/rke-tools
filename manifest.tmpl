image: rancher/rke-tools:{{build.tag}}
manifests:
  -
    image: rancher/rke-tools:{{build.tag}}-linux-amd64
    platform:
      architecture: amd64
      os: linux
  -
    image: rancher/rke-tools:{{build.tag}}-linux-arm64
    platform:
      architecture: arm64
      os: linux
  -
    image: rancher/rke-tools:{{build.tag}}-linux-s390x
    platform:
      architecture: s390x
      os: linux
  -
    image: rancher/rke-tools:{{build.tag}}-windows-1809
    platform:
      architecture: amd64
      os: windows
      version: 1809
  -
    image: rancher/rke-tools:{{build.tag}}-windows-20H2
    platform:
      architecture: amd64
      os: windows
      version: 20H2
